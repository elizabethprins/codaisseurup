<%= form_for @event do |f| %>

  <ul>
     <% @event.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
  </ul>
  

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :capacity %>
  <%= f.number_field :capacity %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <div class="form-group">
    <%= f.check_box :includes_drinks %> Drinks
  </div>
  <div class="form-group">
    <%= f.check_box :includes_food %> Food
  </div>

  <%= f.submit (@event.new_record? ? "Create event" : "Update event") %>

<% end %>
