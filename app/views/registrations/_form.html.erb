<%= form_for [@event, @event.registrations.new] do |f| %>
  <p><strong>Price:</strong> <span>€</span> <%= @event.price %></p>

  <hr>

  <div class="form-group">
    <label>Register</label>
    <%= f.select :guests_count, [["1", 1], ["2", 2], ["3", 3]], prompt: "Select number of people", class: "form-control"%>
  </div>

  <hr>

  <p><strong>Price:</strong> <span>€</span> <%= "#{@registration.total_price}" %></p>

  <hr>

  <div class="actions">
    <%= f.submit "Register Now", class: "btn btn-success" %>
  </div>
<% end %>
